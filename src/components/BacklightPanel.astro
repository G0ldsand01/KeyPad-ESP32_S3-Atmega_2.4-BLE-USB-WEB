<div class="backlight-panel">
  <h2>Rétro-éclairage</h2>
  <div class="form-group">
    <label>
      <input type="checkbox" id="backlight-enabled" checked>
      Activer le rétro-éclairage
    </label>
  </div>
  <div class="form-group">
    <label for="backlight-brightness">Luminosité manuelle:</label>
    <input type="range" id="backlight-brightness" class="slider" min="0" max="100" value="50" step="1">
    <span id="brightness-value">50%</span>
  </div>
  <div class="form-group">
    <label>
      <input type="checkbox" id="env-brightness">
      Selon l'environnement (désactive LED si lumière élevée, active si faible)
    </label>
  </div>
  <div class="form-group">
    <label for="ambient-light">Luminosité ambiante:</label>
    <div class="light-meter">
      <div id="light-level-bar" class="light-bar"></div>
      <span id="light-level-value">0</span> lux
    </div>
  </div>
  <button id="apply-backlight-btn" class="btn btn-primary">
    <i data-lucide="check" class="btn-icon"></i>
    <span>Appliquer</span>
  </button>
</div>
